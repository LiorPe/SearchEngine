<Window x:Class="GUI.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="Indexing in progress..." Height="100" Width="300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ContentRendered="Window_ContentRendered">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.30*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.30*"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>
        <ProgressBar x:Name="pBar" Grid.Row="1" Minimum="0" Maximum="100"></ProgressBar>
        <TextBlock Text="{Binding ElementName=pBar, Path=Value, StringFormat={}{0:0}%}" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <TextBlock x:Name="statusTB" Grid.Row="3" VerticalAlignment="Center"></TextBlock>
    </Grid>
</Window>
